<Page x:Class="MaraphonSkills.Pages.RunnerCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaraphonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Я хочу стать бегуном">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="310">
            <Border x:Name="ButtonOldRunner" Style="{StaticResource BigButtonBorder}" MouseLeftButtonDown="ButtonOldRunner_MouseLeftButtonDown">
                <TextBlock Text="Я участвовал ранее" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
                <Border x:Name="ButtonNewRunner" Style="{StaticResource BigButtonBorder}" MouseLeftButtonDown="ButtonNewRunner_MouseLeftButtonDown">
                    <TextBlock Text="Я новый участник" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
        </StackPanel>
    </Grid>
</Page>
