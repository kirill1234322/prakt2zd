                            <Rectangle Fill="Yellow" Width="60"/>
                            <Rectangle Fill="Red" Width="60"/>
                        </StackPanel>
                    </ControlTemplate>
                </Slider.Template>-->
            <!--</Slider>-->

            <!--<TickBar x:Name="BMITickBar" IsSelectionRangeEnabled="True" IsEnabled="False" Visibility="Visible" Height="50">
                <TickBar.Fill>
                    <SolidColorBrush Color="Red"></SolidColorBrush>
                </TickBar.Fill>
                
            </TickBar>-->
