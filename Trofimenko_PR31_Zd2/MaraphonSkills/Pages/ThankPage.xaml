<Page x:Class="MaraphonSkills.Pages.ThankPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaraphonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThankPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Спасибо за вашу спонсорскую поддержку!" HorizontalAlignment="Center"/>
            <TextBlock Text="Спасибо за поддержку бегуна в MArathon Skills!" HorizontalAlignment="Center"/>
            <TextBlock Text="Ваше пожертвование пойдёт в его благотворительную организацию" HorizontalAlignment="Center"/>
            <Label x:Name="RunnerInfoLabel" HorizontalAlignment="Center" FontSize="20"/>
            <Label x:Name="CharityLabel" HorizontalAlignment="Center" FontSize="30"/>
            <Label x:Name="MoneyLabel" HorizontalAlignment="Center" FontSize="50"/>
            <Border Style="{StaticResource SmallButtonBorder}" HorizontalAlignment="Center" x:Name="BackButton" MouseLeftButtonDown="BackButton_MouseLeftButtonDown">
                <TextBlock Text="Назад"/>
            </Border>
        </StackPanel>
        
    </Grid>
</Page>
